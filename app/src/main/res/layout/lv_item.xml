<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/item_iv_xinhao"
        android:layout_width="45dp"
        android:background="@drawable/connect_locked_signal_level_0"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/item_tv"
        android:text="lxf"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_iv_xinhao"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_iv_conn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/aps_complain_checker"
        android:layout_marginRight="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</RelativeLayout>